{{> time}}
<div class="jumbotron">
	<h1> each programmer</h1>

	<ul>
		{{#each tours}}
			{{! ......}}
			<li>
				{{name}} - {{price}}
				{{#if ../currencies}}
					{{../../currency.abbrev}}
					
				{{/if}}
			</li>
		{{/each}}
	</ul>

	<hr>
	<ul>
		{{#tours}}
			{{! ......}}
			<li>
				{{name}} - {{price}}
				{{#if ../currencies}}
					{{../../currency.abbrev}}
				{{/if}}
			</li>
		{{/tours}}
	</ul>
</div>

<div class="jumbotron">
	<h1>Unless</h1>
	{{#unless currencies}}
	<p>All prices in {{currency.name}}</p>
	{{/unless}}
</div>

<div class="jumbotron">
	<h1>if else</h1>
	{{#if specialsUrl}}
		<p>Check out our <a href="{{specialsUrl}}">specials!</a> </p>
	{{else}}
		<p>Please check back often for specials.</p>
	{{/if}}	
</div>

<div class="jumbotron">
	<h1>each else this</h1>
	<p>
		{{#each currencies}}
			<a href="#" class="currency">{{.}}</a>
		{{else}}
			Unfortunately,we currently only accept {{currency.name}}.
		{{/each}}
	</p>

</div>

