<form action="/login" role="form" class="form-horizontal" method="POST">
	<input type="hidden" name="referrer">
	<div class="form-group">
		<label for="fieldname" class="col-sm-1 control-label">Name:</label>
		<div class="col-sm-11">
			<input type="text" class="form-control" name="name" id="fieldname" placeholder="Please input your name" required>
		</div>
	</div>
	<div class="form-group">
		<label for="fieldpas" class="control-label col-sm-1">Password:</label>
		<div class="col-sm-11">
			<input type="password" class="form-control" name="password" id="fieldpas" placeholder="Please input your password" required>	
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-1 col-sm-8">
				<button class="btn btn-primary" type="submit" id="subBtn">SUBMIT</button>
		</div>
	</div>
</form>